<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvwyh.mapper.SkillArchiveMapper">
    <resultMap id="SkillArchiveResult" type="com.lvwyh.entity.SkillArchive">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="cdN" column="cd_n" />
        <result property="cdX" column="cd_x" />
        <result property="useNumber" column="use_number" />
        <result property="description" column="description" />
        <result property="createTime" column="create_time" />
    </resultMap>

    <insert id="insert" parameterType="com.lvwyh.entity.SkillArchive" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO skill_archive (name, cd_n, cd_x, use_number, description, create_time)
        VALUES (#{name}, #{cdN}, #{cdX}, #{useNumber}, #{description}, #{createTime})
    </insert>

    <select id="selectById" resultMap="SkillArchiveResult">
        SELECT * FROM skill_archive WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="SkillArchiveResult">
        SELECT * FROM skill_archive ORDER BY id ASC
    </select>

    <update id="update" parameterType="com.lvwyh.entity.SkillArchive">
        UPDATE skill_archive
        SET name = #{name},
            cd_n = #{cdN},
            cd_x = #{cdX},
            use_number = #{useNumber},
            description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM skill_archive WHERE id = #{id}
    </delete>
</mapper>
