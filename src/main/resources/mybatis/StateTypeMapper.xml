<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvwyh.mapper.StateTypeMapper">
    <resultMap id="StateTypeResult" type="com.lvwyh.entity.StateType">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="weaponTypes" column="weapon_types" />
    </resultMap>

    <insert id="insert" parameterType="com.lvwyh.entity.StateType" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO state_type (name, weapon_types)
        VALUES (#{name}, #{weaponTypes})
    </insert>

    <select id="selectById" resultMap="StateTypeResult">
        SELECT * FROM state_type WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="StateTypeResult">
        SELECT * FROM state_type ORDER BY id ASC
    </select>

    <update id="update" parameterType="com.lvwyh.entity.StateType">
        UPDATE state_type
        SET name = #{name},
            weapon_types = #{weaponTypes}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM state_type WHERE id = #{id}
    </delete>
</mapper>
