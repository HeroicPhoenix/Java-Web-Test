<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvwyh.mapper.RoomRoundMapper">
    <resultMap id="RoomRoundMap" type="com.lvwyh.entity.RoomRound">
        <id property="id" column="id" />
        <result property="roomId" column="room_id" />
        <result property="rounds" column="rounds" />
        <result property="startTime" column="start_time" />
    </resultMap>

    <insert id="insert" parameterType="com.lvwyh.entity.RoomRound" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO room_round (room_id, rounds, start_time)
        VALUES (#{roomId}, #{rounds}, #{startTime})
    </insert>

    <select id="selectById" resultMap="RoomRoundMap">
        SELECT id, room_id, rounds, start_time
        FROM room_round
        WHERE id = #{id}
    </select>

    <select id="selectByRoomId" resultMap="RoomRoundMap">
        SELECT id, room_id, rounds, start_time
        FROM room_round
        WHERE room_id = #{roomId}
        ORDER BY rounds ASC
    </select>

    <update id="update" parameterType="com.lvwyh.entity.RoomRound">
        UPDATE room_round
        SET room_id = #{roomId},
            rounds = #{rounds},
            start_time = #{startTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM room_round WHERE id = #{id}
    </delete>

    <delete id="deleteByRoomId">
        DELETE FROM room_round WHERE room_id = #{roomId}
    </delete>
</mapper>
