<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvwyh.mapper.WarshipSkillMapper">
    <resultMap id="WarshipSkillResult" type="com.lvwyh.entity.WarshipSkill">
        <id property="id" column="id" />
        <result property="warshipId" column="warship_id" />
        <result property="skillId" column="skill_id" />
    </resultMap>

    <insert id="insert" parameterType="com.lvwyh.entity.WarshipSkill" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO warship_skill (warship_id, skill_id)
        VALUES (#{warshipId}, #{skillId})
    </insert>

    <select id="selectById" resultMap="WarshipSkillResult">
        SELECT id, warship_id, skill_id
        FROM warship_skill
        WHERE id = #{id}
    </select>

    <select id="selectByWarshipId" resultMap="WarshipSkillResult">
        SELECT id, warship_id, skill_id
        FROM warship_skill
        WHERE warship_id = #{warshipId}
        ORDER BY id ASC
    </select>

    <delete id="deleteById">
        DELETE FROM warship_skill WHERE id = #{id}
    </delete>

    <delete id="deleteByWarshipId">
        DELETE FROM warship_skill WHERE warship_id = #{warshipId}
    </delete>
</mapper>
