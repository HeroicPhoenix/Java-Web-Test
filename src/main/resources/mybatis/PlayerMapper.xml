<!-- PlayerMapper.xml -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvwyh.mapper.PlayerMapper">
    <resultMap id="PlayerMap" type="com.lvwyh.entity.Player">
        <id property="id" column="id"/>
        <result property="playerId" column="player_id"/>
        <result property="playerName" column="player_name"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.lvwyh.entity.Player" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO player (player_id, player_name, create_time)
        VALUES (#{playerId}, #{playerName}, #{createTime})
    </insert>

    <select id="selectPage" resultMap="PlayerMap">
        SELECT id, player_id, player_name, create_time
        FROM player ORDER BY id DESC
            LIMIT #{limit} OFFSET #{offset}
    </select>

    <update id="updateNameByPlayerId">
        UPDATE player SET player_name = #{playerName}
        WHERE player_id = #{playerId}
    </update>

    <delete id="deleteByPlayerId">
        DELETE FROM player WHERE player_id = #{playerId}
    </delete>


    <select id="count" resultType="long">
        SELECT COUNT(1) FROM player
    </select>

    <select id="selectAll" resultMap="PlayerMap">
        SELECT id, player_id, player_name, create_time
        FROM player ORDER BY id DESC
    </select>
</mapper>
